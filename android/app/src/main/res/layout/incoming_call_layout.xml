<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background">
    >
    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call_accept"
       android:tint="@color/black_effective"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_effective"
            android:text="Incoming Call"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/Avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:contentDescription="@string/avatar"
            android:src="@drawable/user_no_outline"
            android:translationZ="3dp" />

        <ImageView
            android:id="@+id/inner_white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_circle"
            android:translationZ="2dp" />

        <ImageView
            android:id="@+id/inner_blue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blue_circle"
            android:translationZ="2dp" />

        <ImageView
            android:id="@+id/outer_white"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/white_circle"
            android:translationZ="0dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:textFontWeight="600"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black_effective"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textFontWeight="500"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_marginHorizontal="32dp"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:padding="5dp"
            android:background="@drawable/wrap_circle"
            android:backgroundTint="@color/bg_transparent"
            >
            <LinearLayout
                android:id="@+id/answerSlider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrap_circle"
                android:gravity="bottom"
                android:padding="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/call_accept" />
            </LinearLayout>
            <TextView
                android:id="@+id/answerText"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_marginRight="12dp"
                android:text="slide to answer"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <LinearLayout
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/wrap_circle"
            android:animateLayoutChanges="true"
            android:backgroundTint="@color/bg_transparent"
            >
            <TextView
                android:id="@+id/rejectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="Slide to Reject"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/rejectSlider"
                android:layout_height="wrap_content"
                android:background="@drawable/wrap_circle"
                android:padding="6dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/call_reject" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>